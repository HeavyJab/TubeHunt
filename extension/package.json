{
  "name": "tube-hunt-extension",
  "version": "1.0.0",
  "description": "",
  "main": "popup.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@babel/preset-react": "^7.10.4",
    "chrome": "^0.1.0",
    "components": "^0.1.0",
    "core-js": "^3.6.5",
    "dayjs": "^1.9.0",
    "firebase": "^7.21.1",
    "moment": "^2.29.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "regenerator-runtime": "^0.13.7",
    "styled-components": "^5.2.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^7.24.3",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/user-event": "^12.1.6",
    "@types/chrome": "0.0.124",
    "@types/jest": "^26.0.14",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "eslint": "^7.9.0",
    "eslint-plugin-react": "^7.21.2",
    "jest": "^26.4.2",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.5.0",
    "ts-jest": "^26.4.0",
    "typescript": "^4.0.3"
  },
  "scripts": {
    "test": "jest",
    "watch:all": "parcel src/popup/popup.js src/background/background.js src/content/content.js",
    "watch:popup": "parcel src/popup/popup.js -o popup.js -d dist/popup",
    "watch:content": "parcel src/content/content.js -o content.js -d dist/content",
    "watch:background": "parcel src/background/background.js -o background.js -d dist/background",
    "build-prod": "parcel build src/popup/popup.js src/background/background.js src/content/content.js",
    "clean": "rm -rf dist"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "staticFiles": {
    "staticPath": [
      {
        "staticPath": "static/popup",
        "staticOutDir": "/popup"
      },
      {
        "staticPath": "static/content",
        "staticOutDir": "/content"
      }
    ],
    "watcherGlob": "**/*.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HeavyJab/TubeHunt.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HeavyJab/TubeHunt/issues"
  },
  "homepage": "https://github.com/HeavyJab/TubeHunt#readme"
}
